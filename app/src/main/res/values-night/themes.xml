<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MusicApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/purple</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#0010A1</item>

        <item name="android:textColor">@color/white</item>
        <item name="actionBarStyle">@style/Theme.MusicApp.ActionBar</item>
    </style>

    <style name="Theme.MusicApp.CustomImageView" parent="Theme.MusicApp">
        <item name="tint">@color/white</item>
    </style>

    <style name="Theme.MusicApp.ActionBar" parent="@style/Widget.AppCompat.ActionBar">
        <item name="background">?attr/colorPrimary</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="Theme.MusicApp.IconTextView" parent="Theme.MusicApp">
        <item name="drawableTint">@color/white</item>
    </style>
    
    <style name="Theme.MusicApp.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_inset</item>
        <item name="postSplashScreenTheme">@style/Theme.MusicApp</item>
        <item name="windowSplashScreenBackground">@color/black</item>
        <item name="android:statusBarColor">@color/black</item>
    </style>

    <style name="Theme.MusicApp.TextInputLayout" parent="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxStrokeColor">?attr/colorPrimary</item>
        <item name="android:textColorHint">#9A000000</item>
        <item name="endIconTint">@color/purple</item>
    </style>

    <style name="Theme.MusicApp.TextInputEditText" parent="Theme.MusicApp">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Theme.MusicApp.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/purple</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.MusicApp.Clickable" parent="Theme.MusicApp">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>
</resources>