<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MusicApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_blue</item>
        <item name="colorPrimaryVariant">@color/blue_variant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <item name="android:textColor">@color/black</item>
        <item name="actionBarStyle">@style/Theme.MusicApp.ActionBar</item>
    </style>

    <style name="Theme.MusicApp.CustomImageView" parent="Theme.MusicApp">
        <item name="tint">@color/black</item>
    </style>

    <style name="Theme.MusicApp.ActionBar" parent="@style/Widget.MaterialComponents.ActionBar.Primary">
        <item name="background">?attr/colorPrimary</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:titleTextStyle">@style/Theme.MusicApp.ActionBarText</item>
    </style>

    <style name="Theme.MusicApp.ActionBarText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.MusicApp.IconTextView" parent="Theme.MusicApp">
        <item name="drawableTint">@color/black</item>
    </style>
</resources>